---
// Import Components
import MainHeader from "./MainHeader.astro";
import Navbar from "../components/navbar/Navbar.astro";
import Footer from "../components/footer/Footer.astro";
// Import Global Styles
import "../styles/global.css";

interface Props {
  title?: string;
  description?: string;
}
const { title = "Welcome | Aliakbar Zohour Blog", description } =
  Astro.props as Props;
---

<html lang="en">
  <MainHeader {title} {description} />
  <body
    class="flex flex-col justify-between items-center min-h-[100dvh] bg-gray-100"
  >
    <Navbar />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>
